{
    "compilerOptions": {
        "module": "ES6",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "src",
        "baseUrl": ".",
        "declaration": false,
        "strict": false,
        "stripInternal": true,
        "lib": ["es5", "es6", "dom"],
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}
